{{ header }}
    <main>
        <article class="content_section">
            <div class="container">
                <h1>{{ heading_title }}</h1>
                <p class="caption_date">Дата публикации: {{ date }}</p>
                <div class="article_content">
                	{% if image %}
                    <div class="img_container">
                        <img src="/image/{{ image }}" alt="{{ heading_title }}">
                    </div>
                    {% endif %}
                    <div class="content_text">
                        <div class="content">
                            {{ description }}
                        </div>
                    </div>
                </div>
            </div>
        </article>
    </main>
{{ footer }}